<% layout('./layouts/admin') -%>
    <div class="row">
        <div class="col-sm-12">
            <h4 class="page-title">Add User</h4>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="<%= dashboard %>">Dashboard</a></li>
                <li class="breadcrumb-item">
                    <a href="<%= site_url %>user">User Manager</a>
                </li>
                <li class="breadcrumb-item active">Add User</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card-box ">
                <h4 class="m-t-0 m-b-20 header-title">Add New User</h4>
                <form class="forms-sample " id="add-user" enctype="multipart/form-data">
                    <div class="row">

                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="form-group col-lg-6 ">
                                        <div class="col-form-label">
                                            <label for="name">Full Name
                                               <span class="text-danger">*</span>
                                            </label>
                                        </div>
                                        <div class="input-group ">
                                            <input type="text" name="fullName" class="form-control">
                                            <div class="text-danger fullName w-100"></div>
                                        </div>
                                    </div>

                                    <div style="margin-top: 16px;" class="form-group col-lg-6  ">
                                        <label for="gender">Gender<span class="text-danger">* </span></label>
                                        <select class="form-control select2 gender" name="gender"
                                            autocomplete="off">
                                            <option value="">-Select Gender-</option>
                                            <option value="male">Male</option>
                                            <option value="female">Female</option>
                                            <option value="other">Other</option>
                                        </select>
                                        <div class="text-danger gender w-100"></div>
                                    </div>


                                    <div class="form-group col-lg-6 ">
                                        <div class="col-form-label">
                                            <label for="name">Mobile
                                               <span class="text-danger">* </span>
                                            </label>
                                        </div>
                                        <div class="input-group ">
                                            <input type="number" name="mobile" maxlength="10" class="form-control">
                                            <div class="text-danger mobile w-100"></div>
                                        </div>
                                    </div>

                                    <div class="form-group col-lg-6 ">
                                        <div class="col-form-label">
                                            <label for="name">Email(optional)
                                               <span class="text-danger"></span>
                                            </label>
                                        </div>
                                        <div class="input-group ">
                                            <input type="text" name="email" class="form-control">
                                            <div class="text-danger email w-100"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="form-group col-lg-6  m-t-10">
                                <label for="image">Images<span class="text-danger">*</span></label>

                                <div class="dropZoneUpload profileImg" data-paramName="image"
                                    data-url="<%= imgConfig.LOCATION %>" data-maxFiles="<%= imgConfig.MAX_FILES%>"
                                    data-maxFilesize="<%= imgConfig.MAX_SIZE/1024/1024 %>"
                                    data-acceptedFiles="<%= imgConfig.EXTENSION %>" data-saveTo="profileImg"
                                    data-removeClass="removeProfileImg">

                                    <div data-msg-id=" #blogImgMsg" id="blogImgMsg"></div>
                                    <div class="dz-message needsclick">
                                        <i class="h1 text-muted dripicons-cloud-upload"></i>
                                        <h3>Drop file here or click to upload.</h3>
                                        <span class="text-muted font-13">( You can upload image of
                                            maximum,
                                            <strong>
                                                <%= imgConfig.MAX_SIZE/1024/1024 %> Mb
                                            </strong> )</span>
                                    </div>
                                </div>
                                <input type="hidden" name="profilePicture" id="profileImg">
                                <div class="text-danger profilePicture w-100"></div>

                            </div>
                            
                                <div class="form-group col-lg-12  m-t-10">
                                <button type="submit" class="btn btn-success mr-2 m-l-10">
                                    Submit
                                </button>
                                </div>
                    </div>
            </div>
            </form>
        </div>
    </div>
    </div>
    <script type="text/javascript" src="/pages/user.js"></script>